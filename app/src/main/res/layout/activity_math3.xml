<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".math.Math3">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="404dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="220dp"
        android:layout_height="87dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Submit"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/timer1"
        android:layout_width="322dp"
        android:layout_height="77dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCorrect"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:textColor="#0DD315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtWrong"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:textColor="#F40404"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:text="select new level"
        app:layout_constraintEnd_toStartOf="@+id/txtWrong"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="290dp"
        android:layout_height="84dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

</androidx.constraintlayout.widget.ConstraintLayout>